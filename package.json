{
  "name": "icrc84-package",
  "version": "1.0.0",
  "description": "Lightweight JavaScript library for ICRC-84 token management and wallet operations on Internet Computer Protocol.",
  "author": "HPL",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SDS-Timo/icrc84-package.git"
  },
  "bugs": {
    "url": "https://github.com/SDS-Timo/icrc84-package/issues"
  },
  "homepage": "https://github.com/SDS-Timo/icrc84-package",
  "keywords": [
    "HPL",
    "icrc84",
    "icp",
    "cryptocurrencies",
    "crypto"
  ],
  "main": "dist/index.js",
  "module": "dist/icrc84-package.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "deploy": "npm version patch && npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/icrc84-package.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/icrc84-package.esm.js",
      "limit": "10 KB"
    }
  ],
  "peerDependencies": {
    "@dfinity/agent": "^2.1.3",
    "@dfinity/ledger-icrc": "^2.6.3",
    "@dfinity/principal": "^2.1.3"
  },
  "devDependencies": {
    "@dfinity/agent": "^2.1.3",
    "@dfinity/ledger-icrc": "^2.6.3",
    "@dfinity/principal": "^2.1.3",
    "@rollup/plugin-url": "^8.0.2",
    "@size-limit/preset-small-lib": "^11.1.6",
    "husky": "^9.1.7",
    "rollup-plugin-svgo": "^2.0.0",
    "size-limit": "^11.1.6",
    "tsdx": "^0.14.1",
    "tslib": "^2.8.1",
    "typescript": "^3.9.10"
  },
  "dependencies": {
    "big-integer": "^1.6.52",
    "bignumber.js": "^9.1.2"
  }
}
